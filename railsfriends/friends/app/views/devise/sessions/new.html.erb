<div class="card">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email",placeholder: "email"%>
      </div>
      <br/>

      <div class="field form-group">
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-secondary" %>
      </div>
  <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
